<%= form_with model: [@board,@board_user] , local: true , class: "form-control" do |f|%>
  <div>
    <h3>New board member</h3>
    <p> this adds or deletes a Board member</p>
  </div>
  <div class="list-group">
    <% User.find_each do |user| %>
      <label class="list-group-item">
        <input class="form-check-input me-1" type="checkbox" value="">
        <%= user.email %>
      </label>
    <% end %>
  </div>
  <div class="actions">
    <%= link_to root_path  , class:"btn btn-sm btn-dark rounded-0 mt-3" do %>
      <span>Cancel</span>
    <% end %>
    <%= f.submit "Submit" , class:"btn btn-sm btn-dark rounded-0 mt-3"%>
  </div>
<% end %>
