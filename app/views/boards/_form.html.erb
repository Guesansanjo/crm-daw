<%= form_with model: board , local: true , class: "" do |f|%>
  <div>
    <% if board.new_record? %>
      <h3>New board</h3>
      <p> this creates  Board</p>
    <% else %>
      <h3>edit board</h3>
      <p> this edits Boards Template</p>
    <% end %>
  </div>
  <div>
    <%= f.label :name, class:""%>
    <div>
      <%= f.text_field :name, class:""%>
    </div>
  </div>
  <% link_to "Cancel" , root_path , class: ""%>
  <%= f.submit "Submit" ,class:"btn btn-outline-dark me-2"%>
<% end %>
